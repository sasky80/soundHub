# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{ts,tsx,js,jsx}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.{cs,csproj,sln}]
indent_size = 4
